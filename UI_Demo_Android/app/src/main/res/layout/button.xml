<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/colRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/WrapContents"
                android:text="Wrap Contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/FixedWidth"
                android:text="Fixed Width"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/Alpha50"
                android:text="Alpha 50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5" />
            <Button
                android:id="@+id/Alpha10"
                android:text="Alpha 10%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                />

            <Button
                android:id="@+id/textColorRed"
                android:text="Text Color Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff0000"
                />
            <Button
                android:id="@+id/textColorGreen"
                android:text="Text Color Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff00ff00"
                />
            <Button
                android:id="@+id/textColorBlue"
                android:text="Text Color Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000ff"
                />
            <Button
                android:id="@+id/textColorGray"
                android:text="Text Color Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffcccccc"
                />

            <Button
                android:id="@+id/textColorBlackSemiTransperent"
                android:text="Text Color Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#55000000"
                />


            <Button
                android:id="@+id/textSize10"
                android:text="Text Size 10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />

            <Button
                android:id="@+id/textSize10Bold"
                android:text="Text Size 10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/textSize10Italic"
                android:text="Text Size 10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="italic"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/WrapContents2"
                android:text="Button state demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/clickable_false"
                android:text="Clickable = false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                />
            <Button
                android:id="@+id/clickable_true"
                android:text="Clickable = true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                />
            <Button
                android:id="@+id/enabled_false"
                android:text="Enabled = false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                />

            <Button
                android:id="@+id/enabled_true"
                android:text="Enabled = true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                />

            <Button
                android:id="@+id/editable_false"
                android:text="Editable = false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                />
            <Button
                android:id="@+id/visibility_gone"
                android:text="Visibility = gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/hint_test"
                android:text="Hint = test hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="test hint"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn System White"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:id="@+id/BtnSystemWhite"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn Padding 25"
                android:background="@android:color/holo_red_dark"
                android:padding="25dp"
                android:layout_margin="5dp"
                android:id="@+id/BtnPadding25"
                />

            <Button
                android:id="@+id/ButtonText25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text 25sp"
                android:textSize="25sp"
                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
